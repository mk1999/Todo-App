<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/createTodoLayout"
    tools:context=".CreateTodoFormActivity"
    >

    <TextView
        android:id="@+id/headerText"
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:text="@string/todoName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activityTV"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="163dp"
        android:layout_marginBottom="111dp"
        android:text="Activity Name"
        app:layout_constraintBottom_toTopOf="@+id/statusTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activityET"
        android:layout_width="233dp"
        android:layout_height="51dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="163dp"
        android:layout_marginBottom="202dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreate"
        app:layout_constraintLeft_toRightOf="@+id/activityTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="94dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="464dp"
        android:text="@string/deadlineDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dateET"
        android:layout_width="236dp"
        android:layout_height="55dp"
        android:layout_marginLeft="32dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:editable="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/calendar"
        android:inputType="text|number"
        android:paddingBottom="20dp"
        app:layout_constraintLeft_toRightOf="@+id/dateTV"
        app:layout_constraintTop_toTopOf="@+id/dateTV" />

    <TextView
        android:id="@+id/statuscreTV"
        android:layout_width="82dp"
        android:layout_height="44dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="384dp"
        android:text="@string/statustext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/statusSpin"
        android:layout_width="238dp"
        android:layout_height="60dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:entries="@array/spinner"
        android:padding="20dp"
        android:spinnerMode="dropdown"
        android:saveEnabled="false"
        android:defaultFocusHighlightEnabled="false"
        android:clickable="false"
        app:layout_constraintLeft_toRightOf="@+id/statuscreTV"
        app:layout_constraintTop_toTopOf="@+id/statuscreTV" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="299dp"
        android:text="@string/btnText"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statuscreTV"
        app:layout_constraintTop_toBottomOf="@+id/statusSpin"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>